{
    "name": "web-page-eleventy",
    "description": "The web page for Rapid Fullstack Development",
    "scripts": {
        "serve": "npx @11ty/eleventy --serve",
        "start": "concurrently \"npm run build-styles:watch\" \"npm run serve\"",
        "build": "npx @11ty/eleventy",
        "build-styles:watch": "less-watch-compiler src/styles src/assets/css",
        "build-tailwind": "tailwind build src/tailwind.css -o src/assets/css/tailwind.css"
    },
    "devDependencies": {
        "@11ty/eleventy": "^1.0.0",
        "concurrently": "^7.1.0",
        "less": "^4.1.2",
        "less-watch-compiler": "^1.16.3",
        "tailwindcss": "2.2.16"
    },
    "dependencies": {
        "markdown-it-image-figures": "^2.1.0"
    }
}
